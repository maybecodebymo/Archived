{
  "manifest_version": 3,
  "name": "Archived",
  "version": "1.0",
  "description": "Save and organize archived versions of web pages",
  "permissions": ["tabs", "storage"],
  "action": {
    "default_title": "Open in archive.is",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "commands": {
    "archive-current-tab": {
      "suggested_key": {
        "default": "Alt+A"
      },
      "description": "Archive current tab"
    }
  }
}
